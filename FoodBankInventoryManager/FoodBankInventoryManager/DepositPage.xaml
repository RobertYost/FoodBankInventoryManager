                           TextAlignment="Center" 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold" 
                           FontFamily="Rockwell" 
                           Margin="10, -30, 10, 0">
                    Deposit Page
                    </TextBlock>
                </StackPanel>

                <Button.ToolTip>
                    <ToolTip Style="{DynamicResource Tooltip}">
