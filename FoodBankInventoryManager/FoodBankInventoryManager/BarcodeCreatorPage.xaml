<Page x:Class="FoodBankInventoryManager.BarcodeCreatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodBankInventoryManager"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="725"
      Title="Barcode Creator">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<Label Grid.Row="0"
               Grid.Column="1"
               Margin="0, 25, 0, 0"
               FontFamily="Rockwell"
               FontSize="24"
               FontWeight="Bold"
               HorizontalAlignment="Center"> Enter the barcode text
        </Label>-->

        <TextBox x:Name="txtBarcodedata"  
                 Grid.Row="0"
                 Grid.Column="1"
                 VerticalAlignment="Center"
                 Margin="20, 15, 20, 40"
                 Height="30"
                 FontSize="24"
                 MaxLines="1" 
                 MinLines="1" 
                 KeyDown="txtBarcodedata_KeyDown"
                 IsHitTestVisible="False"
                 Text="Enter Barcode Here"
                 Foreground="DarkGray"
                 TextAlignment="Center"
                 />

        <Button x:Name="btnGenerateBarcode"
                Click="btnGenerateBarcode_Click"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="20, 10, 20, 10"
                Padding="5, 2, 5, 2"
                Style="{DynamicResource ButtonStyle}">
            <TextBlock TextWrapping="Wrap" FontSize="24">Create Barcode</TextBlock>
        </Button>


        <Border  Grid.Row="1"
                     Grid.Column="1"
                     Grid.RowSpan="2"
                     Margin="10, 20, 10, 0"
                     BorderBrush="Black"
                     BorderThickness="1">
            <Image x:Name="imgBarcode"/>
        </Border>



        <Button x:Name="btnAddtoPrint"
                        Click="btnAddtoPrint_Click"
                        Grid.Column="1"
                        Grid.Row="3"
                        HorizontalAlignment="Left"
                        Margin="15,20,0,20"
                        Style="{DynamicResource ButtonStyle}" Width="133">
            <TextBlock TextAlignment="Center">
               Add To<LineBreak/>Preview
            </TextBlock>
        </Button>

        <Label Grid.Column="1"
               Grid.Row="3"
               FontSize="20"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontWeight="Bold"
               FontFamily="Rockwell">
            OR
        </Label>

        <Button x:Name="clearBarcode"  Grid.Column="1"
                 Grid.Row="3"
                 HorizontalAlignment="Right"
                 Margin="0,20,15,20"
                 Style="{DynamicResource ButtonStyle}" Width="133" Click="clearBarcode_Click">
            <TextBlock TextAlignment="Center">
               Clear<LineBreak/>Barcode
            </TextBlock>
        </Button>


        <Button x:Name="btnPrintBarcode" 
                Grid.Column="2"
                Grid.Row="4"
                Margin="25, 20, 25, 20"
                Click="btnPrintBarcode_Click"   
                Style="{DynamicResource ButtonStyle}">
            <TextBlock TextAlignment="Center">
                Print<LineBreak/>Barcode(s)
            </TextBlock>
        </Button>


        <StackPanel Orientation="Vertical"
                    Grid.Row="4"
                    Grid.Column="0">
            <TextBlock TextAlignment="Center" 
                       FontSize="16" 
                       FontFamily="Rockwell" 
                       >Barcodes in<LineBreak/>Preview:</TextBlock>
            <TextBlock x:Name="txtNumBarcodes"
                       FontSize="24" 
                       TextAlignment="Center"
                       FontFamily="Rockwell">0</TextBlock>
            <Button Width="150"
                    Height="35"
                    Margin="3, 0, 3, 0"
                    FontSize="12"
                    Click="Button_Click"
                    Style="{DynamicResource ButtonStyle}">View Current Values</Button>
        </StackPanel>

        <!--<Button x:Name="bttnHome" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="40" FontSize="22" FontWeight="Bold" Click="bttnHome_Click">⌂</Button>-->

    </Grid>
</Page>
