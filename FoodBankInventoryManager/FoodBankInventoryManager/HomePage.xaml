        <Border x:Name="helpAdd_Items"  
                Grid.Row="2" Grid.Column="2" 
                Visibility="Hidden"  
                CornerRadius="15" 
                Width="35" Height="30" 
                Background="Orange" 
                BorderBrush="Black" 
                Margin="-190,0,0,0"  
                BorderThickness="1" 
                VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Center" 
                       FontSize="20" 
                       Foreground="Black">*1</TextBlock>
        </Border>

        <Border x:Name="helpRemove_Items" 
                Grid.Row="2" Grid.Column="3"
                Visibility="Hidden" 
                CornerRadius="15" 
                Width="35" Height="30" 
                Background="Orange" 
                BorderBrush="Black" 
                Margin="-190,0,0,0"  
                BorderThickness="1" 
                VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Center" 
                       FontSize="20" 
                       Foreground="Black">*2</TextBlock>
        </Border>
        <Border x:Name="helpStats"
                Grid.Row="3" Grid.Column="2" 
                Visibility="Hidden" 
                CornerRadius="15" 
                Width="35" Height="30" 
                Background="Orange" 
                BorderBrush="Black" 
                Margin="-190,0,0,0"  
                BorderThickness="1" 
                VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Center" 
                       FontSize="20" 
                       Foreground="Black">*3</TextBlock>
        </Border>
        <Border x:Name="helpMap" 
                Grid.Row="3" Grid.Column="3"
                Visibility="Hidden" 
                CornerRadius="15" 
                Width="35" Height="30" 
                Background="Orange" 
                BorderBrush="Black"
                Margin="-190,0,0,0"
                BorderThickness="1" 
                VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Center" 
                       FontSize="20" 
                       Foreground="Black">*4</TextBlock>
        </Border>
        <StackPanel x:Name="helpLabels" 
                    Grid.Row="4" Grid.Column="0"
                    Visibility="Hidden"
                    Orientation="Vertical"
                    Grid.RowSpan="2" 
                    Grid.ColumnSpan="4" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Left">
            <Label FontStyle="Italic" 
                   FontSize="12">
                * Click on "Add Items" to add items to the Food Bank Mangager Inventory.</Label>
            <Label FontStyle="Italic" 
                   FontSize="12">
                ** Click on "Withdraw Items" to remove items from the Food Bank Inventory.</Label>
            <Label FontStyle="Italic" 
                   FontSize="12">
                *** Click on "Inventory Reports" to see a display of the total number of each item.</Label>
            <Label FontStyle="Italic" 
                   FontSize="12">
                **** Click on "Barcode Creator" to generate barcodes for bins.</Label>
        </StackPanel>



